{
    "python.defaultInterpreterPath": "${workspaceRoot}/conda/bin/python",
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "tests",
        "--cpu-only"
    ],
    "files.watcherExclude": {
        "**/conda/**": true,
        "**/conda-latest/**": true,
        "**/conda-latest-pip/**": true,
        "**/packrat/**": true,
        "**/data/**": true,
        "**/experiments/**": true,
        "**/evaluation/results/**": true,
        "**/docs/_build/**": true,
        "**/docs/api/**": true,
        "**/tools/**": true,
        "**/tmp/**": true,
        "**/.snakemake/**": true,
        "**/.slurm/**": true,
        "**/.ipynb_checkpoints/**": true,
        "**/.pytest_cache/**": true,
        "**/.virtual_documents/**": true,
        "**/__pycache__/**": true,
        "**/*.deprecated/**": true,
        "**/*.bak/**": true,
        "**/*.old/**": true
    },
    "files.exclude": {
        "**/conda/**": true,
        "**/evaluation/results/raw/**": true,
        "**/.snakemake/**": true,
        "**/.slurm/**": true,
        "**/.ipynb_checkpoints/**": true,
        "**/.pytest_cache/**": true,
        "**/.virtual_documents/**": true,
        "**/__pycache__/**": true,
        "**/*.deprecated/**": true,
        "**/*.bak/**": true,
        "**/*.old/**": true
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnPaste": false,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
}